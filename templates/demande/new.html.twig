{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Posez votre question</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>

        {% endfor %}
        {{ form_start(form) }}
        {{ form_rest(form) }}
        <input type="submit" class="btn btn-primary">
        {{ form_end(form) }}
    </div>

{% endblock %}

